<Window x:Class="Swack.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swack.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox BorderThickness="0"
                 ItemsSource="{Binding Channels}"
                 SelectedItem="{Binding CurrentChannel}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock FontSize="18" FontWeight="Bold" Margin="5"
                               Text="{Binding Channel.Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <GridSplitter VerticalAlignment="Stretch"
                      HorizontalAlignment="Right"
                      Width="2"
                      Background="DarkGray"/>

        <TextBlock Text="{Binding CurrentChannel.Channel.Name}"
                   FontSize="30"
                   Margin="0, 15" Grid.Column="1"/>
    </Grid>
</Window>
