<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_button_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_button_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="1dp"
        android:text="Call B"
        app:layout_constraintEnd_toEndOf="@+id/main_button_a"
        app:layout_constraintTop_toBottomOf="@+id/main_button_a" />

    <Button
        android:id="@+id/main_button_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="End"
        app:layout_constraintStart_toStartOf="@+id/main_button_b"
        app:layout_constraintTop_toBottomOf="@+id/main_button_b" />
</androidx.constraintlayout.widget.ConstraintLayout>